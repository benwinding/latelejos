<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane onKeyPressed="#keyPressed" prefHeight="675.0" prefWidth="1060.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RobotRemote.Views.Main.ManualController">
  <columnConstraints>
    <ColumnConstraints percentWidth="100" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="40" />
    <RowConstraints percentHeight="100" />
  </rowConstraints>
  <children>
    <ToolBar prefHeight="40.0" prefWidth="200.0" GridPane.rowIndex="0">
      <items>
        <Button mnemonicParsing="false" onMouseClicked="#onClickHelp" text="Help" />
        <Button mnemonicParsing="false" text="Upload" />
        <Button mnemonicParsing="false" text="Download" />
        <Button mnemonicParsing="false" text="Disconnect" />
        <Button mnemonicParsing="false" onMouseClicked="#onClickDemo" text="Demo" />
      </items>
    </ToolBar>
    <SplitPane dividerPositions="0.6" GridPane.rowIndex="1">
      <items>
        <AnchorPane>
          <HBox alignment="CENTER" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
              <Pane id="map" fx:id="map" />
            </children>
          </HBox>
        </AnchorPane>
        <AnchorPane prefHeight="592.0" prefWidth="497.0">
          <children>
            <SplitPane dividerPositions="0.7" orientation="VERTICAL" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
              <items>
                <AnchorPane>
                  <children>
                    <HBox alignment="CENTER" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                      <GridPane hgap="5" vgap="5">
                        <columnConstraints>
                          <ColumnConstraints maxWidth="89.0" minWidth="83.0" prefWidth="83.0" />
                          <ColumnConstraints halignment="CENTER" maxWidth="105.0" minWidth="52.0" prefWidth="95.0" />
                          <ColumnConstraints maxWidth="83.0" minWidth="30.0" prefWidth="51.0" />
                        </columnConstraints>
                        <rowConstraints>
                          <RowConstraints />
                          <RowConstraints />
                          <RowConstraints />
                        </rowConstraints>
                        <Button mnemonicParsing="false" onMouseClicked="#onClickLeft" prefHeight="26.0" prefWidth="66.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                          <graphic>
                            <ImageView fx:id="btnMoveLeft" fitHeight="68.0" fitWidth="62.0" pickOnBounds="true" preserveRatio="true">
                            </ImageView>
                          </graphic>
                        </Button>
                        <Button mnemonicParsing="false" onMouseClicked="#onClickRight" prefHeight="59.0" prefWidth="49.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                          <graphic>
                            <ImageView fx:id="btnMoveRight" fitHeight="63.0" fitWidth="66.0" pickOnBounds="true" preserveRatio="true">
                            </ImageView>
                          </graphic></Button>
                        <Button mnemonicParsing="false" onMouseClicked="#onClickForward" GridPane.columnIndex="1" GridPane.rowIndex="0">
                          <graphic>
                            <ImageView fx:id="btnMoveUp" fitHeight="70.0" fitWidth="78.0" pickOnBounds="true" preserveRatio="true">
                            </ImageView>
                          </graphic>
                        </Button>
                        <Button mnemonicParsing="false" onMouseClicked="#onClickBackward" prefHeight="46.0" prefWidth="72.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                          <graphic>
                            <ImageView fx:id="btnMoveDown" fitHeight="78.0" fitWidth="66.0" pickOnBounds="true" preserveRatio="true">
                            </ImageView>
                          </graphic>
                        </Button>
                        <Button mnemonicParsing="false" onMouseClicked="#onClickStop" style="-fx-background-radius: 100;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                          <GridPane.margin>
                            <Insets />
                          </GridPane.margin>
                          <graphic>
                            <ImageView fx:id="btnMoveStop" fitHeight="70.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true">
                            </ImageView>
                          </graphic>
                        </Button>
                      </GridPane>
                    </HBox>
                    <CheckBox fx:id="isTestControls" mnemonicParsing="false" text="Test Manual Control" />
                  </children>
                </AnchorPane>
                <AnchorPane>
                  <children>
                    <TextArea id="messageDisplayer" fx:id="messageDisplayer" editable="false" wrapText="true" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />
                  </children>
                </AnchorPane>
              </items>
            </SplitPane>
          </children>
        </AnchorPane>
      </items>
    </SplitPane>
  </children>
</GridPane>
