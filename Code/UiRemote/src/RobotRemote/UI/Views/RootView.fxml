<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.StackPane?>
<GridPane onKeyPressed="#keyPressed" prefHeight="675.0" prefWidth="1060.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RobotRemote.UI.Views.RootController">
  <columnConstraints>
    <ColumnConstraints percentWidth="100" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="30" prefHeight="30" />
    <RowConstraints percentHeight="100" />
  </rowConstraints>
  <MenuBar GridPane.rowIndex="0">
    <Menu mnemonicParsing="false" text="File">
      <MenuItem mnemonicParsing="false" text="Upload XML" />
      <MenuItem mnemonicParsing="false" text="Export XML" />
      <MenuItem mnemonicParsing="false" text="Close" />
    </Menu>
    <Menu mnemonicParsing="false" text="Edit">
      <MenuItem mnemonicParsing="false" text="Change NGZ" />
    </Menu>
    <Menu mnemonicParsing="false" text="Help">
      <MenuItem mnemonicParsing="false" onAction="#onClickHelp" text="Getting Started" />
      <MenuItem mnemonicParsing="false" onAction="#onClickAbout" text="About" />
    </Menu>
  </MenuBar>
  <SplitPane GridPane.rowIndex="1">
    <SplitPane fx:id="leftSide" orientation="HORIZONTAL" prefWidth="Infinity">
      <AnchorPane>
        <HBox alignment="CENTER" >
          <VBox>
            <Pane fx:id="map" onMouseClicked="#onClickMap" />
          </VBox>
        </HBox>
        <TitledPane alignment="TOP_RIGHT" text="Map Options" collapsible="false" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
          <VBox>
            <VBox.margin>
              <Insets bottom="10.0" />
            </VBox.margin>
            <padding>
              <Insets bottom="10.0" />
            </padding>
            <RadioButton fx:id="enterNgz" text="Enter NGZ">
              <toggleGroup>
                <ToggleGroup fx:id="mapOptions"/>
              </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="enterWaypoint" text="Enter Waypoint" toggleGroup="$mapOptions" />
            <RadioButton fx:id="zoomMapIn" text="Zoom Map +" toggleGroup="$mapOptions" />
            <RadioButton fx:id="zoomMapOut" text="Zoom Map -" toggleGroup="$mapOptions" />
          </VBox>
        </TitledPane>
      </AnchorPane>
      <AnchorPane maxWidth="150">
        <VBox>
          <Pane fx:id="locationDetails" />
          <Pane fx:id="sensorDisplay" />
        </VBox>
      </AnchorPane>
    </SplitPane>
    <SplitPane maxWidth="300" orientation="VERTICAL">
      <AnchorPane maxWidth="300">
        <SplitPane minWidth="300" orientation="VERTICAL" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" >
          <AnchorPane>
            <TitledPane text="Manual Controls" minHeight="300" collapsible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" >
              <ToolBar prefHeight="66.0" prefWidth="127.0">
                <Button prefHeight="42.0" prefWidth="41.0">
                  <graphic>
                    <ImageView fx:id="status" />
                  </graphic>
                </Button>
                <Label text="System status">
                  <font>
                    <Font size="8.0" />
                  </font>
                </Label>
              </ToolBar>
              <HBox alignment="CENTER" >
                <VBox alignment="CENTER">
                  <Button id="btnMoveUp" onMouseClicked="#onClickForward" styleClass="moveButton" />
                  <HBox alignment="CENTER">
                    <Button id="btnMoveLeft" onMouseClicked="#onClickLeft" styleClass="moveButton" />
                    <Button id="btnMoveStop" onMouseClicked="#onClickStop" styleClass="stopButton" />
                    <Button id="btnMoveRight" onMouseClicked="#onClickRight" styleClass="moveButton" />
                  </HBox>
                  <Button id="btnMoveDown" onMouseClicked="#onClickBackward" styleClass="moveButton" />
                </VBox>
              </HBox>
            </TitledPane>
          </AnchorPane>
          <AnchorPane>
            <TitledPane text="Switch Mode" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" >
              <HBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <VBox alignment="CENTER">
                  <Button fx:id="switchmode" mnemonicParsing="false" onMouseClicked="#onClickSwitch" prefHeight="66.0"
                          prefWidth="132.0"/>
                </VBox>
              </HBox>
            </TitledPane>
          </AnchorPane>
        </SplitPane>
      </AnchorPane>
      <AnchorPane>
        <TitledPane text="System Log" collapsible="false" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" >
          <TextArea id="messageDisplayer" fx:id="messageDisplayer" editable="false" wrapText="true"/>
        </TitledPane>
      </AnchorPane>
    </SplitPane>
  </SplitPane>
</GridPane>
