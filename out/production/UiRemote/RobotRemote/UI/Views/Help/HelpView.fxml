<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RobotRemote.UI.Views.Help.HelpController">
  <HBox alignment="CENTER" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
    <VBox alignment="CENTER">
      <Label wrapText="true">
        <VBox.margin>
          <Insets bottom="20.0" />
        </VBox.margin>
        Mouse Functions:
      </Label>
      <ImageView fitHeight="400" fitWidth="300" pickOnBounds="true" preserveRatio="true">
        <Image url="@../../Images/mouse_functions.png" />
      </ImageView>
      <Label wrapText="true">
        <VBox.margin>
          <Insets bottom="20.0" top="20" />
        </VBox.margin>
        Keyword Shortcuts:
      </Label>
      <Label prefWidth="300.0" wrapText="true">
        Forward(W)
        Left(A)
        Right(D)
        Down(S)
        Stop(X)
        Upload(U)
        Download(L)
      </Label>
    </VBox>
  </HBox>
</AnchorPane>
